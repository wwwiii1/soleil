<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="20dp"
    card:cardElevation="20dp">


    <RelativeLayout
        android:id="@+id/card_linear"
        style="@style/wrap_content"
        >
        <TextView
            style="@style/wrap_content"
            android:id="@+id/delete_text"
            android:layout_toStartOf="@+id/delete_btn"
            />

        <ImageButton
            android:id="@+id/delete_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/white"/>

        <RelativeLayout
            style="@style/wrap_content"
            android:id="@+id/list_show0"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:id="@+id/music_image0"
                style="@style/item_image"
                />
            <ImageView
                android:id="@+id/picture_show"
                android:background="@android:color/white"
                android:padding="10dp"
                android:text="picture_show"
                android:layout_width="300dp"
                android:layout_height="350dp"
                android:layout_toRightOf="@+id/music_image0"
                />
        </RelativeLayout>


        <RelativeLayout
            style="@style/wrap_content"
            android:id="@+id/list_show1"
            android:layout_alignStart="@+id/list_show0"
            android:layout_below="@+id/list_show0">

            <ImageView
                android:id="@+id/music_image1"
                style="@style/item_image"
                />
            <TextView
                style="@style/wrap_content"
                android:id="@+id/content_show"
                android:padding="10dp"
                android:text="content_show"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/music_image1"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/wrap_content"
            android:id="@+id/list_show3"
            android:layout_alignStart="@+id/list_show2"
            android:layout_below="@+id/list_show1">
            <ImageView
                android:id="@+id/music_image3"
                style="@style/item_image"
                />
            <TextView
                style="@style/wrap_content"
                android:id="@+id/id_show"
                android:padding="10dp"
                android:text="id_show"
                android:textSize="13dp"
                android:layout_toRightOf="@+id/music_image3"/>
        </RelativeLayout>

        <RelativeLayout
            style="@style/wrap_content"
            android:id="@+id/list_show2"
            android:layout_alignStart="@+id/list_show1"
            android:layout_below="@+id/list_show3"
            >
            <ImageView
                android:id="@+id/music_image2"
                style="@style/item_image"
                />
            <LinearLayout
                style="@style/wrap_content"
                android:id="@+id/location_show"
                android:orientation="horizontal">

                <TextView
                    style="@style/wrap_content"
                    android:id="@+id/longitude"
                    android:padding="10dp"
                    android:text="location_longitude"
                    android:textSize="13dp"
                    android:layout_toRightOf="@+id/music_image2"/>

                <TextView
                    style="@style/wrap_content"
                    android:id="@+id/latitude"
                    android:padding="10dp"
                    android:text="location_latitude"
                    android:textSize="13dp"
                    android:layout_toRightOf="@+id/music_image2"/>

            </LinearLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/card_created"
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="card_date"
            android:textSize="15dp"/>

        <RelativeLayout
            android:id="@+id/good_bad_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list_show2"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/good_text"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textSize="13dp"/>

            <ImageButton
                android:id="@+id/good_btn"
                style="@style/wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/good_text"
                android:background="@drawable/ic_favorite_black_24dp"/>

            <TextView
                android:id="@+id/bad_text"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/bad_btn"
                android:textSize="13dp"/>

            <ImageButton
                android:id="@+id/bad_btn"
                style="@style/wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_error_black_24dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        style="@style/wrap_content"
        android:id="@+id/content_idx"
        android:textSize="0dp"/>

</android.support.v7.widget.CardView>